{
  "name": "leet-code-ultimate",
  "displayName": "LeetCode Ultimate",
  "description": "愉快的刷 LeetCode 题",
  "version": "0.0.3",
  "publisher": "twtool",
  "icon": "images/leet-code.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:question.explorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "question.explorer.refresh",
        "icon": "$(refresh)",
        "title": "刷新"
      },
      {
        "command": "question.explorer.previous.page",
        "icon": "$(arrow-left)",
        "title": "上一页"
      },
      {
        "command": "question.explorer.next.page",
        "icon": "$(arrow-right)",
        "title": "下一页"
      },
      {
        "command": "question.explorer.open",
        "title": "打开题目"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leetcode",
          "title": "LeetCode Ultimate",
          "icon": "resources/leet-code.svg"
        }
      ]
    },
    "views": {
      "leetcode": [
        {
          "id": "question.explorer",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "question.explorer.refresh",
          "group": "navigation",
          "when": "view == question.explorer"
        }
      ],
      "view/item/context": [
        {
          "command": "question.explorer.previous.page",
          "group": "inline",
          "when": "view == question.explorer && viewItem == all"
        },
        {
          "command": "question.explorer.next.page",
          "group": "inline",
          "when": "view == question.explorer && viewItem == all"
        }
      ]
    },
    "configuration": [
      {
        "title": "LeetCode Ultimate",
        "properties": {
          "leet.code.language": {
            "type": "string",
            "enum": ["", "Rust", "Java"],
            "description": "刷 LeetCode 题使用得编程语言"
          },
          "leet.code.work.path": {
            "type": "string",
            "description": "LeetCodeUltimate 的工作目录"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-ws": "^3.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "express-ws": "^5.0.2",
    "fs-extra": "^10.1.0",
    "moment": "^2.29.4"
  }
}
